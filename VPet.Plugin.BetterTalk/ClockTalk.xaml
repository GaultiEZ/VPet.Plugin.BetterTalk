<Window x:Class="VPet.Plugin.BetterTalk.ClockTalk"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VPet.Plugin.BetterTalk"
        mc:Ignorable="d"
        Title="Set" Height="216" Width="438">

    <!-- 使用 Grid 作为 Window 的唯一子元素 -->
    <Grid>
        <!-- 背景模糊层 -->
        <Grid Margin="10,0,0,-5" IsEnabled="False">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="76*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>
            <Grid.Background>
                <ImageBrush Stretch="UniformToFill" ImageSource="/VPet.Plugin.BetterTalk;component/rt.png"/>
            </Grid.Background>
            <Grid.Effect>
                <BlurEffect Radius="10"/>
            </Grid.Effect>
        </Grid>

        <!-- 内容层 -->
        <Grid>
            <!-- 最简单的圆角按钮实现 -->
            <Button Content="" Height="25" Width="58" Margin="10,10,370,166">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="4" 
                                Background="#FFDDDDDD" 
                                BorderBrush="#FF5C85FF" 
                                BorderThickness="1" Margin="0,0,1,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>