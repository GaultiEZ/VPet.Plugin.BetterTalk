<Window x:Class="VPet.Plugin.BetterTalk.ClockTalk2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VPet.Plugin.BetterTalk"
        mc:Ignorable="d"
        Title="ClockTalk2" Height="340" Width="566">

    <!-- 页面切换按钮 -->


    <Grid x:Name="PageClock" HorizontalAlignment="Center" Height="320" VerticalAlignment="Top" Width="546">
        <Button Name="ClockButton" Content="闹钟" Height="30" Margin="0,0,0,290" FontFamily="Yu Gothic UI" FontWeight="Bold" HorizontalAlignment="Left" Width="140" Background="White" FontSize="18" VerticalAlignment="Bottom"
                
            />
        <Button Name="TimerButton" Content="倒计时" Width="150" Height="30" Margin="141,0,255,290" Background="White" FontFamily="Yu Gothic UI" FontSize="18" FontWeight="Bold"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="7*"/>
                <RowDefinition Height="109*"/>
            </Grid.RowDefinitions>
            <Grid x:Name="Page1" HorizontalAlignment="Center" Height="285" Margin="0,16,0,0" Grid.Row="1" VerticalAlignment="Top" Width="546">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="67*"/>
                    <ColumnDefinition Width="115*"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="Ntext" HorizontalAlignment="Left" Height="40" Margin="26,17,0,0" TextWrapping="Wrap" Text="       H        Min" VerticalAlignment="Top" Width="268" FontSize="36" FontWeight="Bold" Grid.ColumnSpan="2"/>
                <ComboBox x:Name="HoursCombo" HorizontalAlignment="Left" Height="35" Margin="26,22,0,0" VerticalAlignment="Top" Width="63" BorderBrush="#FFFFFBFB">
                    <ComboBox.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </ComboBox.Background>
                </ComboBox>
                <ComboBox x:Name="MinsCombo" HorizontalAlignment="Left" Height="35" Margin="145,22,0,0" VerticalAlignment="Top" Width="63" BorderBrush="#FFFFFBFB" Text="H" Grid.ColumnSpan="2">
                    <ComboBox.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </ComboBox.Background>
                </ComboBox>
                <TextBlock x:Name="Ntext复制__C_" HorizontalAlignment="Left" Height="48" Margin="26,57,0,0" TextWrapping="Wrap" Text="       Days" VerticalAlignment="Top" Width="268" FontSize="36" FontWeight="Bold" Grid.ColumnSpan="2"/>
                <ComboBox x:Name="WeekCombo" HorizontalAlignment="Left" Height="35" Margin="26,66,0,0" VerticalAlignment="Top" Width="63" BorderBrush="White" Text="H">
                    <ComboBox.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </ComboBox.Background>
                </ComboBox>
                <Button x:Name="TimerAddButton" Content="Add" HorizontalAlignment="Left" Height="45" Margin="26,216,0,0" VerticalAlignment="Top" Width="88" Background="#FFF7F7F7" FontWeight="Bold" FontSize="36" FontFamily="Leelawadee UI" BorderBrush="#FF080808" Foreground="#FF8E8E8E" Click="TimerAddButton_Click"/>
                <ListBox x:Name="ClockList" HorizontalAlignment="Left" Height="300" Margin="104,0,0,0" VerticalAlignment="Center" Width="247" SelectionMode="Multiple" Background="WhiteSmoke" BorderBrush="White" Grid.Column="1"/>
                <TextBox x:Name="TextboxTimer" HorizontalAlignment="Left" Height="90" Margin="26,110,0,0" TextWrapping="Wrap" Text="到时操作" VerticalAlignment="Top" Width="245" FontFamily="Segoe UI Symbol" FontWeight="Bold" Foreground="Black" BorderBrush="White" Background="#FFF3F3F3" Grid.ColumnSpan="2"/>
            </Grid>

        </Grid>

    </Grid>

</Window>